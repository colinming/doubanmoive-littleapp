/********* modal **********/
.auth-cover{ /* 背景浮层 */
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 10000;
  display: flex;
  align-items: center;
  justify-content: center;
}
.auth-modal{ /* 自定义弹窗主体样式 */
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  padding: 32rpx;
  border-radius: 10rpx;
  position: relative;
}
.auth-content{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 32rpx;
}
.close-ico{
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 32rpx;
  height: 32rpx;
  background: #dbdbdb;
}
.auth-btn{
  width: 350rpx;
  padding: 5rpx;
  margin-top: 20rpx;
  border-radius: 40rpx;
  border: none;
  outline: none;
  background-color: #00b600;
  color: #fff;
  font-size: 24rpx;
}
.modal-hide{
  display: none !important;
}

.change-btn{ /*切换主页的 btn*/
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  display: block;
  width: 50%;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  font-size: 14px;
  text-align: center;
  background-color: #C20C0C;
  color: #fff;
}
