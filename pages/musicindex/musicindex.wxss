.tab-header{
  display: flex;
  height: 80rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
}
.tab-title{
  height: 80rpx;
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
}
.tab-words{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #333;
  padding: 0 10rpx;
}
.is-active{
  color: #d33a31;
  position: relative;
}
.is-active::after{
  display: block;
  position: absolute;
  bottom: 0px;
  left: 0;
  right: 0;
  content: '';
  height: 2px;
  background: #d33a31;
  z-index: 10;
}

.tab-content{
  padding: 0 32rpx;
}
.songs{
  
}
.songs-link{
  background: #fff;
  opacity: 1;
}
.songs-title{
  display: block;
  font-size: 17px;
  padding: 20rpx 0 20rpx 10rpx;
  color: #333;
  position: relative;
}
.songs-title:before{
  content: " ";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 30%;
  background: #d33a31;
}
.songs-wrapper{
  display: flex;
  flex-wrap: wrap;
}
.songs-detail{
  width: 215rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
}
.songs-detail:nth-child(3n){
  margin-right: 0;
}
.songs-cover{
  width: 100%;
  height: 320rpx;
}
.songs-des{
  display: block;
  font-size: 14px;
  margin: 10rpx 0 30rpx 0;
}

