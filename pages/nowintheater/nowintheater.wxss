}
.hot-title{
	margin-top: 84rpx;
	padding: 20rpx 0 20rpx 32rpx;
	font-size: 42rpx;
	color: #333;
}
.list-main{
	width: calc(100% - 64rpx);
	margin: 0 32rpx 32rpx 32rpx;
	overflow: hidden;
}
.single-li{
	width: 29%;
	float: left;
	display: flex;
	flex-direction: column;
	align-items: center;
	margin: 0 44rpx 40rpx 0;
}
.single-li:nth-child(3n){
	margin-right: 0;
}
image{
	width: 100%;
	height: 280rpx;
}
.title{
	width: 90%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  padding: 10rpx 0;
  font-size: 24rpx;
  text-align: center;
}