/**index.wxss**/
.index-container{
  margin-top: 84rpx;
}
.list-wrapper{
  margin-bottom: 35rpx;
}
.list-header{
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  font-size: 32rpx;
  
}
.read-more{
  color: #00b600;
  font-size: 28rpx;
  background: transparent;
}
.list-main{
  display: flex;
  white-space: nowrap;
}
.single-li{
  width: 200rpx;
  display: inline-block;
  margin-right: 16rpx;
  
}
.li-main{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.li-main image{
  width: 100%;
  height: 262rpx;
}
.li-des{
  width: 90%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  padding: 10rpx 0;
  font-size: 24rpx;
  text-align: center;
}
.single-li:first-child{
  margin-left: 32rpx;
}
.single-li:last-child{
  margin-right: 32rpx;
}
.types{
  margin-bottom: 84rpx;
}
.types-header{
  padding: 20rpx 32rpx 26rpx;
  font-size: 34rpx;
  color: #111;
}
.types-main{
  border-top: 1rpx solid #eee;
  margin-left: 32rpx;
  overflow: hidden;
}
.type-name{
  position: relative;
  float: left;
  width: 50%;
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #42bd56;
  
}
.type-name{
}
.arrow-right{
  position: absolute;
  right: 0;
  top: 3rpx;
  width: 64rpx;
  height: 64rpx;
}
.type-name:nth-child(2n){
  border-right: 0;
  padding-left: 32rpx;
}
.auth-cover{ /* 背景浮层 */
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 10000;
  display: flex;
  align-items: center;
  justify-content: center;
}
.auth-modal{ /* 自定义弹窗主体样式 */
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  padding: 32rpx;
  border-radius: 10rpx;
  position: relative;
  
}
.auth-content{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 32rpx;
}
.close-ico{
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 32rpx;
  height: 32rpx;
  background: #dbdbdb;
}
.auth-btn{
  width: 350rpx;
  padding: 5rpx;
  margin-top: 20rpx;
  border-radius: 40rpx;
  border: none;
  outline: none;
  background-color: #00b600;
  color: #fff;
  font-size: 24rpx;
}
.modal-hide{
  display: none !important;
}

.change-btn{
  display: block;
  width: 50%;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  font-size: 14px;
  margin: 0 auto 32rpx;
  text-align: center;
  background-color: #42bd56;
  color: #fff;
}
