.movie-detail{
	margin: 32rpx 26rpx;
}
.movie-title{
	font-size: 48rpx;
	color: #333;
}
.movie-content{
	display: flex;
	margin-bottom: 30rpx;
	justify-content: space-between;
}
.movie-des{
	margin: 20rpx 30rpx 0 0;
	font-size: 28rpx;
}
.movie-cover{
	width: 240rpx;
	height: 280rpx;
}
.tags{
	margin-bottom: 40rpx;
}
.tags .tag-title{
	font-size: 24rpx;
	color: #aaa;
	margin-bottom: 20rpx;
}
.tag-wrapper{
	display: flex;
	flex-wrap: wrap;
}
.tags .tag{
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 15rpx 20rpx;
	border-radius: 33rpx;
	background: #effaf0;
	border: 1px solid #42bd56;
	margin: 0 18rpx 15rpx 0;
}
.tags .tag-words{
	font-size: 24rpx;
	color: #42bd56;
	margin-right: 10rpx;
}
.tags .arrow-right{
	width: 30rpx;
	height: 30rpx;
}

.actors{
	
}
.actors .actor-title{
	color: #aaa;
	font-size: 14px;
}
.actor-scroll{
	white-space: nowrap;
	margin: 32rpx 0;
}
.actor-wrapper{
	display: inline-block;
	margin-right: 15rpx;
}
.actor-wrapper:last-child{
	margin-right: 0;
}
.actor-content{
	display: inline-block;
	margin-right: 15rpx;
	font-size: 0;
}
.actor-content:last-child{
	margin-right: 0;
}
.actor-img{
	width: 150rpx;
	height: 220rpx;
}
.actor-name{
	display: block;
	font-size: 14px;
	color: #aaa;
	text-align: center;
	margin-top: 20rpx;
}
.actor-operator{
	display: block;
	color: #333;
	font-size: 14px;
	text-align: center;
	margin-top: 20rpx;
}

.comments{
	margin-bottom: 32rpx;
}
.comments-title{
	display: block;
	color: #aaa;
	font-size: 14px;
	padding-bottom: 20rpx;
}
.comment-content{
	margin-bottom: 32rpx;
}
.comment-user{
	display: flex;
}
.user-avtar{
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
}
.user-name{
	margin-left: 10rpx;
	display: flex;
	flex-direction: column;
}
.user-name .name{
	font-size: 14px;
	font-weight: bold;
	color: #494949;
}
.user-name .time{
	margin-top: 5rpx;
	font-size: 12px;
	color: #aaa;
}
.comment-des{
	font-size: 14px;
	color: #333;
	margin: 10rpx 30rpx 5rpx 90rpx;
}
.comment-edit{
	margin: 0 30rpx 0 90rpx;
}
.num{
	font-size: 12px;
	color: #ccc;
}
.more-comment{
	text-align: center;
	color: #42bd56;
	font-size: 15px;
	background: #fff;
	border: none;
	outline: none;
	padding: 0;
	line-height: 1;
}
.more-comment:after{
	border: none;
}