/**index.wxss**/
.music-list{

}
.list-header{
	padding: 0 32rpx 30rpx;
}
.title{
	display: block;
	font-size: 20px;
	padding: 20rpx 0;
	color: #d33a31;
	font-weight: bold;
}
.des-wrapper{
	display: flex;
	justify-content: space-between;
}
.list-cover{
	width: 30%;
	height: 280rpx;
	margin-right: 30rpx;
}
.des-right{
	width: 70%;
}
.des{
	font-size: 14px;
	color: #666;
}
.tag-wrapper{
	margin-top: 32rpx;
	display: flex;
	align-items: center;
}
.tag-name{
	font-size: 14px;
	color: #666;
}
.tag{
	display: inline-block;
	font-size: 12px;
	margin-right: 20rpx;
	color: #666;
	border: 1px solid #d33a31;
	padding: 5rpx 10rpx;
	border-radius: 5rpx;
}

.list-wrapper{
	
}
.song-title{
	color: #666;
	background: #eeeff0;
	font-size: 12px;
	padding: 10rpx 32rpx;
}
.list-content{
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 20rpx 32rpx 20rpx 0;
	margin-left: 32rpx;
	font-size: 14px;
	border-bottom: 1px solid rgba(0,0,0,.1)
}
.song-detail{
	display: flex;
	flex-direction: column;
}
.song-name{
	color: #333;
	margin-bottom: 10rpx;
}
.song-art{
	color: #888;
}
.play-ico{
	width: 48rpx;
	height: 48rpx;
}
.play-all{
	width: 450rpx;
	font-size: 14px;
	padding: 20rpx 0;
	text-align: center;
	margin: 30rpx auto;
	border-radius: 60rpx; 
	color: #fff;
	background: #d33a31;
}